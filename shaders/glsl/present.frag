#version 450
#extension GL_ARB_separate_shader_objects : enable

//--------------------------------------------------------------------------------------
// inputs 
//--------------------------------------------------------------------------------------
layout (location = 0) in vec2 uv;
layout(set = 0, binding = 0) uniform sampler2D _tex;

//--------------------------------------------------------------------------------------
// outputs
//--------------------------------------------------------------------------------------
layout (location = 0) out vec4 fragOut;

//--------------------------------------------------------------------------------------
// program
//--------------------------------------------------------------------------------------
void main() {
    fragOut = texture(_tex, uv);  
}
